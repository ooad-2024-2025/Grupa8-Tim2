@model IEnumerable<K_K.Models.LokacijaKafica>
@{
    ViewData["Title"] = "Lokacije Kafića";
}

<h1>Lokacije Kafića</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus"></i> Dodaj novu lokaciju
    </a>
    <a asp-action="Map" class="btn btn-info">
        <i class="fas fa-map"></i> Pogledaj na Mapi
    </a>
</p>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>
                        <i class="fas fa-map-marker-alt"></i>
                        @Html.DisplayNameFor(model => model.Adresa)
                    </th>
                    <th>
                        <i class="fas fa-city"></i>
                        @Html.DisplayNameFor(model => model.Grad)
                    </th>
                    <th>
                        <i class="fas fa-globe"></i>
                        @Html.DisplayNameFor(model => model.GeografskaSirina)
                    </th>
                    <th>
                        <i class="fas fa-globe"></i>
                        @Html.DisplayNameFor(model => model.GeografskaDuzina)
                    </th>
                    <th>Akcije</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <strong>@Html.DisplayFor(modelItem => item.Adresa)</strong>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Grad)
                        </td>
                        <td>
                            @item.GeografskaSirina.ToString("F4")
                        </td>
                        <td>
                            @item.GeografskaDuzina.ToString("F4")
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm" title="Uredi">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm" title="Detalji">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" title="Obriši">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <h4><i class="fas fa-info-circle"></i> Nema dostupnih lokacija</h4>
        <p>Trenutno nema unesenih lokacija kafića. <a asp-action="Create" class="alert-link">Dodajte prvu lokaciju</a>.</p>
    </div>
}