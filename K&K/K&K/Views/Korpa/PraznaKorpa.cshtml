@model List<K_K.Models.StavkaKorpe>

@{
    ViewData["Title"] = "Vaša korpa";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["CartMessage"] != null)
{
    <div class="alert alert-warning">@TempData["CartMessage"]</div>
}

@if (Model == null || !Model.Any())
{
    <p>Vaša korpa je prazna.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Naziv proizvoda</th>
                <th>Količina</th>
                <th>Cijena po komadu</th>
                <th>Ukupno</th>
                <th>Akcija</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var stavka in Model)
            {
                <tr>
                    <td>@stavka.Proizvod?.Naziv</td>
                    <td>@stavka.Kolicina</td>
                    <td>@stavka.Cijena.ToString("0.00") KM</td>
                    <td>@(stavka.Kolicina* stavka.Cijena).ToString("0.00") KM</td>
                    <td>
                        <form asp-action="UkloniIzKorpe" method="post">
                            <input type="hidden" name="stavkaId" value="@stavka.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Ukloni</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-end">
        <strong>
            Ukupno za platiti:
            @Model.Sum(x => x.Kolicina * x.Cijena).ToString("0.00") KM
        </strong>
    </div>

    <form asp-action="ZavrsiKupovinu" method="post" class="mt-3 text-end">
        <button type="submit" class="btn btn-success">Završi kupovinu</button>
    </form>
}
