@* Views/Narudzba/Uspjeh.cshtml *@
@{
    ViewData["Title"] = "Narudžba uspješna";
}

<div class="container text-center py-5">
    <div class="card shadow-sm mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <h1 class="card-title text-success">
                <i class="bi bi-check-circle-fill"></i> Narudžba uspješno kreirana!
            </h1>
            <p class="card-text lead">
                Hvala vam na kupovini. Vaša narudžba je primljena i bit će obrađena uskoro.
            </p>
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success mt-3" role="alert">
                    @TempData["SuccessMessage"]
                </div>
            }
            <hr>
            <p class="card-text">
                Detalje o narudžbi možete pronaći na stranici <a asp-controller="Narudzba" asp-action="Index" class="text-primary">Moje narudžbe</a>.
            </p>
            <a asp-controller="Proizvod" asp-action="Index" class="btn btn-outline-primary mt-3">Nastavi kupovinu</a>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}