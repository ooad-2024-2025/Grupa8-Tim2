@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function updateSubmitButton() {
            var nacinPlacanja = document.querySelector('[name="NacinPlacanja"]');
            var submitButton = document.getElementById("submitButton");

            if (!nacinPlacanja || !submitButton) {
                return;
            }

            var selectedValue = nacinPlacanja.value;

            if (selectedValue === "Kartica") {
                submitButton.value = "💳 Unesite podatke o kartici";
                submitButton.className = "btn btn-warning btn-lg w-100";
                submitButton.disabled = false;
            } else if (selectedValue === "Gotovina") {
                submitButton.value = "✅ Finaliziraj narudžbu";
                submitButton.className = "btn btn-success btn-lg w-100";
                submitButton.disabled = false;
            } else if (selectedValue && selectedValue !== "") {
                submitButton.value = "📋 Kreiraj narudžbu";
                submitButton.className = "btn btn-primary btn-lg w-100";
                submitButton.disabled = false;
            } else {
                submitButton.value = "Odaberite način plaćanja";
                submitButton.className = "btn btn-secondary btn-lg w-100";
                submitButton.disabled = true;
            }
        }

        // Funkcija za ažuriranje količine
        function updateQuantity(stavkaId, change) {
            fetch('/Korpa/UpdateQuantity', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('[name="__RequestVerificationToken"]').value
                },
                body: JSON.stringify({ id: stavkaId, change: change })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload(); // Reload da se ažuriraju podaci
                }
            })
            .catch(error => console.error('Error:', error));
        }

        // Funkcija za uklanjanje stavke
        function removeItem(stavkaId) {
            if (confirm('Da li ste sigurni da želite ukloniti ovu stavku?')) {
                fetch('/Korpa/Remove', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify({ id: stavkaId })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    }
                })
                .catch(error => console.error('Error:', error));
            }
        }

        document.addEventListener("DOMContentLoaded", function () {
            var nacinPlacanja = document.querySelector('[name="NacinPlacanja"]');

            if (nacinPlacanja) {
                updateSubmitButton();
                nacinPlacanja.addEventListener("change", updateSubmitButton);
            }
        });
    </script>
}