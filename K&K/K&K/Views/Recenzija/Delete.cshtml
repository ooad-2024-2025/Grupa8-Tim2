@model K_K.Models.Recenzija

@{
    ViewData["Title"] = "Izbriši Recenziju";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow-sm p-4">
                <h2 class="card-title text-center text-danger mb-4">Potvrda Brisanja Recenzije</h2>
                <h5 class="text-center mb-4">
                    Da li ste sigurni da želite izbrisati ovu recenziju? Ova akcija je nepovratna!
                </h5>
                <hr />

                <div class="mb-4">
                    <h4 class="mb-3 text-primary">Detalji Recenzije:</h4>
                    <dl class="row">
                        <dt class="col-sm-4 text-secondary">
                            @Html.DisplayNameFor(model => model.Ocjena)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Ocjena)
                        </dd>

                        <dt class="col-sm-4 text-secondary">
                            @Html.DisplayNameFor(model => model.Proizvod)
                        </dt>
                        <dd class="col-sm-8">
                            @* Ako želite prikazati ime proizvoda, a ne diskriminator: *@
                            @Html.DisplayFor(model => model.Proizvod.Naziv)
                            @* Primjer pretpostavke da vaš Proizvod model ima 'Naziv' property *@
                            @* @Html.DisplayFor(model => model.Proizvod.Discriminator) - Originalna linija ako je Discrimininator željeni prikaz *@
                        </dd>

                        <dt class="col-sm-4 text-secondary">
                            @Html.DisplayNameFor(model => model.Korisnik)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Korisnik.Email)
                        </dd>

                        <dt class="col-sm-4 text-secondary">
                            @Html.DisplayNameFor(model => model.Narudzba)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Narudzba.Id)
                        </dd>
                    </dl>
                </div>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <button type="submit" class="btn btn-danger btn-lg me-md-2">
                            <i class="bi bi-trash-fill"></i> Izbriši Recenziju
                        </button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="bi bi-x-circle-fill"></i> Odustani i Nazad na Listu
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}