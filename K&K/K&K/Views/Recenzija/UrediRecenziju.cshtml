@model K_K.Models.Recenzija
@{
    ViewData["Title"] = "Uredi Recenziju";
}

<h1>Uredi Recenziju</h1>

<h4>Za Proizvod ID: @Model.ProizvodId</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UrediRecenziju" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" /> @* Skriveno polje za ID recenzije koja se uređuje *@
            <input type="hidden" asp-for="ProizvodId" /> @* Skriveno polje za ID proizvoda (ne mijenja se) *@
            <input type="hidden" asp-for="KorisnikId" /> @* Skriveno polje za ID korisnika (ne mijenja se) *@
            @* Ako imate DatumKreiranja, dodajte i to kao skriveno polje *@
            @* <input type="hidden" asp-for="DatumKreiranja" /> *@

            <div class="form-group">
                <label asp-for="Ocjena" class="control-label"></label>
                <input asp-for="Ocjena" class="form-control" type="number" min="1" max="5" />
                <span asp-validation-for="Ocjena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tekst" class="control-label"></label>
                <textarea asp-for="Tekst" class="form-control"></textarea>
                <span asp-validation-for="Tekst" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Spremi promjene" class="btn btn-primary" />
            </div>
            @Html.AntiForgeryToken()
        </form>
    </div>
</div>

<div>
    <a asp-action="PrikaziRecenziju" asp-route-proizvodId="@Model.ProizvodId">Nazad na recenzije</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}