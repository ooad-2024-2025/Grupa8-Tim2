@{
}
@model List<K_K.Models.Recenzija>

@{
    ViewData["Title"] = "Recenzije";
    var proizvod = ViewBag.Proizvod as K_K.Models.Proizvod;
}

<h2>Recenzije za @proizvod?.Naziv</h2>

@if (!Model.Any())
{
    <p class="text-muted">Još nema recenzija za ovaj proizvod.</p>
}
else
{
    @foreach (var recenzija in Model)
    {
        <div class="border-bottom pb-3 mb-3">
            <div class="d-flex justify-content-between">
                <strong>@recenzija.Korisnik?.UserName</strong>
                <small class="text-muted">@recenzija.DatumDodavanja.ToShortDateString()</small>
            </div>
            <div class="text-warning mb-1">
                @for (int i = 1; i <= recenzija.Ocjena; i++)
                {
                    <i class="fas fa-star"></i>
                }
            </div>
            <p>@recenzija.Tekst</p>
        </div>
    }
}
<a asp-controller="Proizvodi" asp-action="Detalji" asp-route-id="@proizvod?.Id" class="btn btn-outline-secondary">
    <i class="fas fa-arrow-left"></i> Nazad na proizvod
</a>
