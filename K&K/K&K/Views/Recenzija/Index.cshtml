@model IEnumerable<K_K.Models.Recenzija>

@{
    ViewData["Title"] = "Lista Recenzija";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Lista Recenzija</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Dodaj Novu Recenziju
        </a>
    </div>
    <hr />

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            Trenutno nema dostupnih recenzija.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-striped border shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Ocjena)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Proizvod)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Korisnik)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Narudzba)
                        </th>
                        <th class="text-center">Akcije</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ocjena)
                            </td>
                            <td>
                                @* Pretpostavljamo da `Proizvod` ima svojstvo `Naziv` za prikaz *@
                                @Html.DisplayFor(modelItem => item.Proizvod.Naziv)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Korisnik.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Narudzba.Id)
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group" aria-label="Akcije">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Uredi">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Detalji">
                                        <i class="bi bi-info-circle"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Izbriši">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    @{
        // Skripte za validaciju obično nisu potrebne na Index stranici, ali se mogu zadržati ako su dio općeg _Layout.
         await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}