@model List<K_K.Models.Recenzija>

@* Dohvatite CurrentUserId i IsAdmin iz ViewData *@
@{
    string currentUserId = ViewData["CurrentUserId"] as string;
    bool isAdmin = (bool)(ViewData["IsAdmin"] ?? false);
}

@if (!Model.Any())
{
    <p class="text-muted">Još nema recenzija za ovaj proizvod.</p>
}
else
{
    <div class="list-group">
        @foreach (var recenzija in Model)
        {
            <div class="list-group-item mb-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <strong>@(recenzija.Korisnik?.UserName ?? "Anonimni korisnik")</strong>
                        <div class="text-warning">
                            @for (int i = 1; i <= recenzija.Ocjena; i++)
                            {
                                <i class="fas fa-star"></i>
                            }
                            @for (int i = recenzija.Ocjena + 1; i <= 5; i++)
                            {
                                <i class="far fa-star"></i>
                            }
                        </div>
                        <p>@recenzija.Tekst</p>
                    </div>
                    @* Dugmad za Uredi i Obriši *@
                    <div class="text-end">
                        @if (User.Identity.IsAuthenticated &&
                       (recenzija.KorisnikId == User.FindFirst("http://schemas.xmlsoap.org/ws/2005/05/identity/claims/nameidentifier")?.Value ||
                       User.IsInRole("Admin")))
                        {
                            <a asp-action="UrediRecenziju" asp-route-id="@recenzija.Id" class="btn btn-sm btn-warning me-2">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form asp-action="IzbrisiRecenziju" asp-route-id="@recenzija.Id" method="post" style="display:inline;" onsubmit="return confirm('Jeste li sigurni da želite obrisati ovu recenziju?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        }

    </div>
}